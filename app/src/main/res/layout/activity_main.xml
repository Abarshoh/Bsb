        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:src="@drawable/torch"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="#ED1313"
            android:gravity="center"
            android:text="Rescued"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:layout_weight="1"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/white">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:cornerRadius="10dp"
            android:text="Vegan"
            android:textSize="10sp"
            android:textAllCaps="false"
            app:strokeColor="@color/white"
            android:backgroundTint="#ED1313"
            android:gravity="center"
            app:strokeWidth="1dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp">

        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:cornerRadius="10dp"
            android:text="Delivery"
            android:textSize="10sp"
            android:textAllCaps="false"
            app:strokeColor="@color/white"
            android:backgroundTint="#ED1313"
            app:strokeWidth="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="5dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:cornerRadius="10dp"
            android:text=">100 cal"
            android:textSize="10sp"
            android:textAllCaps="false"
            app:strokeColor="@color/white"
            android:backgroundTint="#ED1313"
            app:strokeWidth="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="5dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:cornerRadius="10dp"
            android:text="Popular"
            android:textSize="10sp"
            android:textAllCaps="false"
            app:strokeColor="@color/white"
            android:backgroundTint="#ED1313"
            app:strokeWidth="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="5dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="689dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btns">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:layout_marginStart="10dp"/>



    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="100dp"
        app:cardElevation="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discovery" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/star" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bag"
                android:backgroundTint="@color/black" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>